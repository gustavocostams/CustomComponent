<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.customcomponent.CustomComponentAddItem
        android:id="@+id/item_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_component_title="@string/item_one"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.customcomponent.CustomComponentAddItem
        android:id="@+id/item_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_component_title="@string/item_two"
        app:layout_constraintTop_toBottomOf="@id/item_one" />

    <com.example.customcomponent.CustomComponentAddItem
        android:id="@+id/item_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_component_title="@string/item_three"
        app:layout_constraintTop_toBottomOf="@id/item_two" />
</androidx.constraintlayout.widget.ConstraintLayout>